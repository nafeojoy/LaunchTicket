<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>E-Ticket Management</title>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fractionslider.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery.fractionslider.js"></script>


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


    <style>
        .field-validation-error {
            color: red;
            -webkit-border-radius: 1px;
            -moz-border-radius: 1px;
            border-radius: 1px;
            -moz-box-shadow: 0 0 5px #888;
            -webkit-box-shadow: 0 0 5px #888;
            box-shadow: 0 0 5px #888;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="row">

            <nav class="col-sm-2">
                <!--nav-->
                <div class="row">
                    <div class="col-sm-12">
                        <!--logo-->
                        <img src="/Content/images/logo1.gif" alt="Logo" class="img-circle img-responsive center" />
                    </div>

                    <!--/logo-->
                    <div class="col-sm-12">
                        <ul class="nav nav-pills nav-stacked">
                            <li class="active"><a href="../Home"><span class=""></span>&nbsp;&nbsp;Home</a></li>
                            
                            <li><a href="../Contact/About"><span class=""></span>&nbsp;&nbsp;About</a></li>
                            <li><a href="@Url.Action("Index","FeedBack")"><span class=""></span>&nbsp;&nbsp;Contact</a></li>
                            
                            @if (ViewBag.User == "1")
                            {
                                <li><a href="@Url.Action("Index","Launch")"><span class=""></span>&nbsp;&nbsp;Tickets</a></li>
                                <li><a href="../Pubali/Index"><span class=""></span>&nbsp;&nbsp;MV. Pubali</a></li>
                                <li><a href="../Home/Profile"><span class=""></span>&nbsp;&nbsp;Profile</a></li>
                                <li><a href="../Home/CheckOut"><span class=""></span>&nbsp;&nbsp;CheckOut</a></li>
                                <li><a href="../Home/Signout"><span class=""></span>&nbsp;&nbsp;Sign Out</a></li>
                            }
                            else
                            {
                                <li><a href="../Signup"><span class=""></span>&nbsp;&nbsp;Sign Up</a></li>
                                <li><a href="../Home/Login"><span class=""></span>&nbsp;&nbsp;Sign In</a></li>
                            }
                        </ul>
                    </div>

                </div>
            </nav>
            <!--/nav-->

            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-12">
                        <h1>
                           E-Ticket
                        </h1>
                        <p>..... An easy way to Book your Launch Tickets</p>
                    </div>

                </div>
                <div class="row">
                    <br />
                </div>
                @if (ViewBag.User == "1")
                {
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-8">
                            <h4>
                                Signed in as <b>@ViewBag.UserName</b>
                            </h4>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <br />
                    </div>
                }
                <div class="row">
                    <br />
                </div>
                <div class="row">
                    @RenderBody()
                </div>

                <div class="row">
                    <br />
                </div>

            </div>

        </div>

    </div>
    <!--/.content-->

    <footer class="row footer">
        <div class="panel-footer">
            <p>&copy;  2014 E-Ticket.com. All rights reserved. Designed by group of 4.2.</p>
        </div>
    </footer>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>*@

    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
</body>

</html>
